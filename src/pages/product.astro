---
import Header from "../components/header.astro"
import "../styles/product.css"

const products = [
    {
        id: 1,
        title: "Raven Top With Colored Leaves Design",
        category: "Women's Top",
        price: 65,
        image: "https://c961156.parspack.net/images/tshirt"
    }
];

const sizes = ["XS", "S", "M", "L", "XL", "2XL"];
const colors = [
    { name: "Black", hex: "#292D32" },
    { name: "Yellow", hex: "#F3C331" },
    { name: "Pink", hex: "#F02A7F" },
    { name: "Dark Red", hex: "#8B0000" }
];
---

<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <title>جزئیات محصول</title>
</head>
<body>
<Header/>
<main class="product-container">
    <div class="product-images">
        <div class="thumbnail-container">
            {products.map(product => (
                    <>
                        <img
                                src={product.image}
                                class="thumbnail"
                                alt={`${product.title} thumbnail`}
                        />
                        <img
                                src={product.image}
                                class="thumbnail"
                                alt={`${product.title} thumbnail`}
                        />
                        <img
                                src={product.image}
                                class="thumbnail"
                                alt={`${product.title} thumbnail`}
                        />
                    </>
            ))}
        </div>
        <div class="main-image">
            {products.map(product => (
                    <img
                            src={product.image}
                            alt={product.title}
                    />
            ))}
        </div>
    </div>

    <div class="product-info">
        {products.map(product => (
                <>
                    <h1 class="product-title">{product.title}</h1>

                    <div class="rating">
                        <div class="stars">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                        </div>
                        <span>4.5</span>
                        <span>(120 نظر)</span>
                    </div>

                    <div class="size-selector">
                        <label>انتخاب سایز</label>
                        <div class="size-options">
                            {sizes.map(size => (
                                    <button class={`size-option ${size === 'L' ? 'selected' : ''}`}>
                                        {size}
                                    </button>
                            ))}
                        </div>
                    </div>

                    <div class="color-selector">
                        <label>رنگ‌های موجود</label>
                        <div class="color-options">
                            {colors.map(color => (
                                    <div
                                            class="color-option"
                                            style={`background-color: ${color.hex}`}
                                            title={color.name}
                                    ></div>
                            ))}
                        </div>
                    </div>

                    <div class="price-container">
                        <div class="price">
                            {product.price}$
                        </div>
                        <button class="add-to-cart">
                            افزودن به سبد
                        </button>
                    </div>

                    <div class="features">
                        <div class="feature">
                            <i class="fa-solid fa-ruler"></i>
                            <span>راهنمای سایز</span>
                        </div>
                        <div class="feature">
                            <i class="fa-solid fa-truck"></i>
                            <span>ارسال رایگان</span>
                        </div>
                    </div>
                </>
        ))}
    </div>
</main>

</body>
</html>