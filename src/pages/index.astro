---

<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <title>Women's Clothing Store</title>
</head>
<body>
<Header/>
<main class="index">
    <div class="clothes">
        <section class="top-section">
            <ul class="filters" role="list">
                <li><button class="filter" type="button" data-filter="newest">جدید</button></li>
                <li><button class="filter" type="button" data-filter="bestsellers">پرفروش‌ترین</button></li>
                <li><button class="filter" type="button" data-filter="popular">محبوب‌ترین</button></li>
                <li><button class="filter" type="button" data-filter="expensive">گران‌ترین</button></li>
                <li><button class="filter" type="button" data-filter="cheapest">ارزان‌ترین</button></li>
            </ul>
            <h1 class="top-title">لباس زنانه</h1>
        </section>

        <div class="list">
            {products.map(product => (
                    <article class="cloth">
                        <div class="cloth-top-section">
                            <img
                                    src={product.image}
                                    alt={product.title}
                                    class="image"
                                    loading="lazy"
                            >
                            <button
                                    type="button"
                                    class="heart-section"
                                    aria-label="Add to favorites"
                            >
                                <i class="fa-regular fa-heart"></i>
                            </button>
                        </div>
                        <div class="cloth-bottom-section">
                            <div class="bottom-section-left">
                                <h2 class="cloth-title">{product.title}</h2>
                                <p class="cloth-category">{product.category}</p>
                            </div>
                            <div class="bottom-section-right">
                                <p class="price">{product.price}$</p>
                            </div>
                        </div>
                    </article>
            ))}
        </div>
    </div>

    <aside class="sidebar">
        <div class="sidebar-head">
            <i class="fa-solid fa-filter"></i>
            <h2 class="title">فیلتر</h2>
        </div>

        <div class="category side">
            <div class="head">
                <button class="collapse-btn" aria-expanded="true">
                    <i class="fa-solid fa-angle-up"></i>
                    <span class="title">دسته‌بندی</span>
                </button>
            </div>
            <div class="item">
                {categories.map(category => (
                        <button class="title category-btn" type="button">{category}</button>
                ))}
            </div>
        </div>

        <div class="price side">
            <div class="head">
                <button class="collapse-btn" aria-expanded="true">
                    <i class="fa-solid fa-angle-up"></i>
                    <span class="title">قیمت</span>
                </button>
            </div>
            <form class="min-max">
                <div class="min-box">
                    <label for="min" class="min">حداقل</label>
                    <input
                            type="number"
                            class="input"
                            id="min"
                            min="0"
                            step="1000"
                    >
                </div>
                <div class="max-box">
                    <label for="max" class="max">حداکثر</label>
                    <input
                            type="number"
                            class="input"
                            id="max"
                            min="0"
                            step="1000"
                    >
                </div>
            </form>
        </div>

        <div class="colors side">
            <div class="head">
                <button class="collapse-btn" aria-expanded="true">
                    <i class="fa-solid fa-angle-up"></i>
                    <span class="title">رنگ‌ها</span>
                </button>
            </div>
            <div class="color-items">
                {colors.map(color => (
                        <button class="color" type="button">
                            <div
                                    class="pallet"
                                    style={`background-color: ${color.hex};${color.border ? ' border: 1px solid #E6E3E3;' : ''}`}
                            ></div>
                            <div class="pallet-name">{color.name}</div>
                        </button>
                ))}
            </div>
        </div>

        <div class="size side">
            <div class="head">
                <button class="collapse-btn" aria-expanded="true">
                    <i class="fa-solid fa-angle-up"></i>
                    <span class="title">سایز</span>
                </button>
            </div>
            <div class="item">
                {sizes.map(size => (
                        <button class="title size-btn" type="button">{size}</button>
                ))}
            </div>
        </div>
    </aside>
</main>

<!--<script src="sidebar-collapse-animated.js"></script>-->
